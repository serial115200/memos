{
    "editor.rulers": [
        80,
        90,
        100
    ],
    "editor.renderWhitespace": "all",
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "esbonio.sphinx.srcDir": "${workspaceFolder}/source",
    "esbonio.sphinx.confDir": "${workspaceFolder}/source",
    "esbonio.sphinx.buildDir": "${workspaceFolder}/build",
    "liveServer.settings.port": 5503,
    "liveServer.settings.fullReload": true,
    "liveServer.settings.root": "/build/html",
    "makefile.configureOnOpen": false,
    "restructuredtext.linter.disabledLinters": [
        "doc8",
        "rstcheck",
        "rst-lint"
    ],
    //"restructuredtext.linter.doc8.executablePath": "/usr/local/bin/doc8",
}
